
<div class="container">
  <div class="row ">
    <div class="col-md-1">
    &nbsp;
    </div>
    <div class="col-md-auto">

<%
user = @user
%>
<table class="table table-sm">

  <thead>

    <tr>
      <th colspan="2" scope="col" ><h3>Showing User: <%= @user.email %></h3></</th>

    <% if (action == :show ) && (can? :edit, @user) %>
      <th>
        <button type="button" class="btn btn-warning btn-sm">
            <%= link_to "Edit", edit_user_path(@user) %>
        </button>
      </th>
    <% end %>

      </tr>
  </thead>

  <tbody>



<% if show_form %>

    <%= form_with(model: user, local: true) do |form| %>
        <%= render 'form_start', user: user, form: form %>

        <%= render 'fields_in_one' , fields: @fields, user: user, action: action, form: form, show_form: show_form%>

        <%= render 'form_end', user: user, form: form %>
    <% end %>

<% else %>

    <%= render 'fields_in_one', user: user, field_name: field_name, action: action, form: form, show_form: show_form %>

<% end %>




  </tbody>

</table>


</div>
<div class="col-md-3">
&nbsp;
</div>

</div>
</div>
