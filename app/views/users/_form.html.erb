
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="form-group" id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_area :email, class: "form-control"  %>
  </div>

<% if can? :manage_access, user %>
  <div class="form-group">
    <%= form.label :role %>
    <%= form.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
  </div>

  <%if user != current_user %>
    <div class="form-group" >
      <%= form.label :approved %>
      <%= form.check_box :approved, class: "form-control" %>
    </div>
  <% end %>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
