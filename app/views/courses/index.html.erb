<p id="notice"><%= notice %></p>

<h3><%= t("Courses") %></h3>

<% if can? :edit, @courses %><%= link_to (t('New Course')), new_course_path %><br><% end %>
JSON: <%= link_to (t('Export all Courses')), export_courses_json_url %>
<!-- Button trigger modal -->
<% if can? :edit, @courses %>| <a href="#" data-toggle="modal" data-target="#jsonModal">
  <%= t("Import Course(s)") %>
</a>
<% end %>

<br><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= t("name") %></th>
      <th scope="col"><%= t("code") %></th>
      <th scope="col"><%= t("ects") %></th>
      <th scope="col" colspan="2"><%= t("state") %></th>
      <% if false %>
      <th scope="col"><%= t("mission") %></th>
      <th scope="col"><%= t("examination") %></th>
      <th scope="col"><%= t("objectives") %></th>
      <th scope="col"><%= t("contents") %></th>
      <th scope="col"><%= t("prerequisites") %></th>
      <th scope="col"><%= t("literature") %></th>
      <th scope="col"><%= t("methods") %></th>
      <th scope="col"><%= t("skills knowledge understanding") %></th>
      <th scope="col"><%= t("skills intellectual") %></th>
      <th scope="col"><%= t("skills practical") %></th>
      <th scope="col"><%= t("skills general") %></th>
      <% end %>
      <th scope="col"></th>
      <% if can? :edit, @courses %>
      <th scope="col" colspan="2"></th>
      <% end %>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr >
        <td scope="row"><%= link_to course.name, course_path(course)%></td>
        <td><%= link_to course.code, course_path(course) %></td>
        <td><%= course.ects %></td>
        <td class="bg-<%= course.aasm_state %>">   </td>
        <td><%= course.aasm_state.humanize.titleize %></td>

        <% if false %>
        <td><%= course.mission %></td>
        <td><%= course.examination %></td>
        <td><%= course.objectives %></td>
        <td><%= course.contents %></td>
        <td><%= course.prerequisites %></td>
        <td><%= course.literature %></td>
        <td><%= course.methods %></td>
        <td><%= course.skills_knowledge_understanding %></td>
        <td><%= course.skills_intellectual %></td>
        <td><%= course.skills_practical %></td>
        <td><%= course.skills_general %></td>
        <% end %>
        <td><%= link_to (t('show')), course %></td>
        <% if can? :edit, course %>
        <td><%= link_to (t('edit')), edit_course_path(course) %></td>
        <td><%= link_to (t('destroy')), course, method: :delete, data: { confirm: (t('are you sure?')) } %></td>
        <% end %>
        <td><%= link_to 'Export JSON', export_course_json_url(id: course.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<!-- JSON Modal -->
<div class="modal fade" id="jsonModal" tabindex="-1" role="dialog" aria-labelledby="jsonModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_tag import_course_json_path, multipart: true do %>
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Import a Course from an existing JSON-File</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Here you can upload a JSON-File including a Course. If the Course already exists (if the code is already taken), it will be updated and overwritten by the contents of the JSON-File.
        </p>
        <%= file_field_tag :files, accept: 'application/json', :multiple => true, name: 'files[]', :style => 'display:inline; margin-top:-10px' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag 'Upload & Import', :class => 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
