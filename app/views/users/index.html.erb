
<h3>Users</h3>
<br><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Approved</th>
      <th scope="col">Current Log in</th>
      <th scope="col">Last Log in</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td onclick = "location.href='<%= user_path(user) %>'" scope="row"><%= user.email %></td>
        <td><%= user.role.to_s.humanize %></td>
        <td> <input type="checkbox" <%= user.approved ? "checked":"" %>>
          <% if !user.approved && can?(:approve, user) %> | <%= link_to "Approve", approve_user_path(id: user.id) %><% end %>
        </td>
        <td><%= user.format_time(user.current_sign_in_at) %></td>
        <td><%= user.format_time(user.last_sign_in_at) %></td>

        <td><% if can? :edit, user %>
              <%= link_to "Edit", edit_user_path(user) %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
