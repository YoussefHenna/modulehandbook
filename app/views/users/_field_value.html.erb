<% type = field_type(field_name)
    value = user.send(field_name) %>

<% case type.to_sym  %>
<% when :datetime %>
  <%= user.format_time(value) %>
<% when :boolean %>
   <input type="checkbox" <%= value ? "checked":"" %> >
   <% if field_name == :approved && !user.approved && can?(:approve, user) %> | <%= link_to "Approve", approve_user_path(id: user.id) %><% end %>
<% else %>
<%= value %>
<% end %>
