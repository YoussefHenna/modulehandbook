<% type = field_type(field_name)
    value = user.send(field_name) %>

<% case type.to_sym  %>
<% when :datetime %>
  <%= user.format_time(value) %>
<% when :boolean %>
   <div class="form-group" >
     <%= form.label :approved, class: "form-check-label" %>
     <%= form.check_box :approved, class: "form-check-input" %>
   </div>
<% else %>
<%= value %>
<% end %>
